{
  "name": "hygienebuddy",
  "displayName": "Hygiene Buddy",
  "description": "A VSCode extension that helps maintain code hygiene by providing analysis and style guide suggestions.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"  
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hygienebuddy.showBuddy"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hygienebuddy.showBuddy",
        "title": "Show Hygiene Buddy"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "hygienebuddy.googleApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google API Key for code analysis"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hygienebuddy.git"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
